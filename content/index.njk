---
layout: layouts/home.njk
eleventyNavigation:
  key: Home
  order: 1
numberOfLatestPostsToShow: 10
---
{% set postsCount = collections.posts | length %}
{% set postslist = collections.posts | head(-1 * numberOfLatestPostsToShow) %}

{% for post in postslist | reverse %}
	<h1 class="post-title"><a href="{{post.url}}">{{ post.data.title }}</a></h1>

	<ul class="post-metadata">
		<li><time datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time></li>
		{%- for tag in post.data.tags | filterTagList %}
		{%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
		<li><a href="{{ tagUrl }}" class="post-tag">{{ tag }}</a>{%- if not loop.last %}, {% endif %}</li>
		{%- endfor %}
	</ul>

	{{ post.content | safe }}

{% endfor %}



{% set morePosts = postsCount - numberOfLatestPostsToShow %}
{% if morePosts > 0 %}
<p>{{ morePosts }} more post{% if morePosts != 1 %}s{% endif %} can be found in <a href="/blog/">the archive</a>.</p>
{% endif %}

